@using Test_AITS.Models;
@model dynamic
@{
    ViewData["Title"] = "Details";
}
<ul class="list-group">
    <li class="list-group-item active">Employee Details</li>
    <li class="list-group-item">Code: @Model.dealer.DealerCode</li>
    <li class="list-group-item">Name: @Model.dealer.Dealer.Name</li>
    <li class="list-group-item">Designation: @Model.dealer.Designation</li>
</ul>
<br>
<h4>Associates-</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Designation</th>
            <th>List</th>
            <th>Total Count</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @foreach (var item in Model.data)
        {
            <tr>
                <td>@i</td> 
                @{ 
                    i++;
                    string[] d = item.Value.Split(",");
                    int total = d.Length - 1;
                 }
                <td>@item.Key</td>
                <td>
                    @for (int j = 0; j < d.Length; j++)
                    {
                       <a href="@Url.Action("Details","Home",new {code = d[j] })"> @d[j]  </a>
                    }
                </td>
                <td>@total</td>
            </tr>

          }
    </tbody>
</table>
